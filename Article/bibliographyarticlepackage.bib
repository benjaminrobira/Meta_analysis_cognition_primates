@article{benjamini2001controlling,
abstract = {The screening of many endpoints when comparing groups from different strains, searching for some statistically significant difference, raises the multiple comparisons problem in its most severe form. Using the 0.05 level to decide which of the many endpoints' differences are statistically significant, the probability of finding a difference to be significant even though it is not real increases far beyond 0.05. The traditional approach to this problem has been to control the probability of making even one such error - the Bonferroni procedure being the most familiar procedure achieving such control. However, the incurred loss of power stemming from such control led many practitioners to neglect multiplicity control altogether. The False Discovery Rate (FDR), suggested by Benjamini and Hochberg [J Royal Stat Soc Ser B 57 (1995) 289], is a new, different, and compromising point of view regarding the error in multiple comparisons. The FDR is the expected proportion of false discoveries among the discoveries, and controlling the FDR goes a long way towards controlling the increased error from multiplicity while losing less in the ability to discover real differences. In this paper we demonstrate the problem in two studies: the study of exploratory behavior [Behav Brain Res (2001)], and the study of the interaction of strain differences with laboratory environment [Science 284 (1999) 1670]. We explain the FDR criterion, and present two simple procedures that control the FDR. We demonstrate their increased power when used in the above two studies. {\textcopyright} 2001 Elsevier Science B.V. All rights reserved.},
author = {Benjamini, Yoav and Drai, Dan and Elmer, Greg and Kafkafi, Neri and Golani, Ilan},
doi = {10.1016/S0166-4328(01)00297-2},
issn = {01664328},
journal = {Behavioural Brain Research},
keywords = {Bonferroni procedure,Exploratory behavior in mice,FDR,Multiple comparisons},
number = {1-2},
pages = {279--284},
pmid = {11682119},
publisher = {Elsevier},
title = {{Controlling the false discovery rate in behavior genetics research}},
volume = {125},
year = {2001}
}
@article{spiegel2016feedback,
abstract = {What animals know about their environment is crucial for understanding observed patterns of movement and space-use, but the feedback between information acquisition and movement is rarely considered. Animals can inherit spatial information or obtain it with their senses, via their social environment, or from direct experience. On one hand, this information affects decisions about when, where and how to move. On the other hand, movement itself shapes the information animals acquire due to effects of habitat sampling, speed-accuracy tradeoffs, and cognitive limitations. We suggest that simultaneously considering how the information animals have about their environment affects their movements and how these movements, in turn, shape the information they acquire about their habitat will provide useful insights to the field of movement ecology.},
