journal = {International Journal of Primatology},
keywords = {Figs,Frugivore calls,Kibale National Park,Mangabeys,Range use,Search path},
number = {2},
pages = {339--353},
publisher = {Springer},
title = {{Fruit finding by mangabeys (\textit{Lophocebus albigena}): Are monitoring of fig trees and use of sympatric frugivore calls possible strategies?}},
volume = {19},
year = {1998}
}
