journal = {Biotropica},
keywords = {ENSO,climate change,fruiting patterns,phenology,rainfall,solar radiation},
month = {may},
number = {3},
pages = {384--395},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Solar radiation and ENSO predict fruiting phenology patterns in a 15-year record from Kibale National Park, Uganda}},
url = {https://onlinelibrary.wiley.com/doi/full/10.1111/btp.12559 https://onlinelibrary.wiley.com/doi/abs/10.1111/btp.12559 https://onlinelibrary.wiley.com/doi/10.1111/btp.12559},
