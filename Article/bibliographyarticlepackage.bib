number = {8},
pages = {e22895},
pmid = {30024029},
publisher = {Wiley Online Library},
title = {{Sooty mangabeys scavenge on nuts cracked by chimpanzees and red river hogs—An investigation of inter-specific interactions around tropical nut trees}},
