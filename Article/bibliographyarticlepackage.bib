journal = {American Journal of Primatology},
keywords = {Callimico goeldii,Competition,Foraging,Home range,Mixed species,Predation,Saguinus fuscicollis,Saguinus labiatus},
number = {3},
pages = {143--158},
pmid = {11443630},
