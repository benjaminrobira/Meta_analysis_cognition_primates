keywords = {Chimpanzees,Crops,Food,Forests,Kibale National Park,Maize,Museum national d'histoire naturelle,Mus{\'{e}}um national d'histoire naturelle,M{\'{e}}canismes adaptatifs: des organismes aux communau,Natures,Paris,Soci{\'{e}}t{\'{e}}s,Trees,Twilight,Uganda,Vigilance,anthropologie et d'ethnobiologie},
month = {oct},
