publisher = {John Wiley {\&} Sons, Ltd},
title = {{Western gorilla vocal repertoire and contextual use of vocalizations}},
url = {https://onlinelibrary.wiley.com/doi/full/10.1111/eth.12122 https://onlinelibrary.wiley.com/doi/abs/10.1111/eth.12122 https://onlinelibrary.wiley.com/doi/10.1111/eth.12122},
