publisher = {John Wiley {\&} Sons, Ltd},
title = {{Tests of Spatial and Temporal Interaction Among Animals}},
url = {https://onlinelibrary.wiley.com/doi/full/10.2307/1941774 https://onlinelibrary.wiley.com/doi/abs/10.2307/1941774 https://esajournals.onlinelibrary.wiley.com/doi/10.2307/1941774},
