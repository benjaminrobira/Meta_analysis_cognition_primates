keywords = {Animal behaviour,Animal ecology,Biotelemetry,Datalogging,Global positioning system technology,Radio-tracking},
month = {jul},
number = {1550},
pages = {2163--2176},
pmid = {20566494},
publisher = {The Royal Society},
title = {{Global positioning system and associated technologies in animal behaviour and ecological research}},
url = {https://royalsocietypublishing.org/doi/abs/10.1098/rstb.2010.0090},
volume = {365},
year = {2010}
}
