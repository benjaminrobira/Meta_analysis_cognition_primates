issn = {14697769},
journal = {Journal of the Marine Biological Association of the United Kingdom},
number = {3},
pages = {551--564},
publisher = {Cambridge University Press},
title = {{Swimming behaviour of the larvae of pecten maximus (\textit{l.}) (\textit{bivalvia})}},
