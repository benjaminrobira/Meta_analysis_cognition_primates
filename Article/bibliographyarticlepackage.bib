journal = {International Journal of Primatology},
keywords = {Aggression,Female transfer,Intergroup interactions,Supporting males,Tolerance,Western lowland gorilla},
number = {2},
pages = {181--202},
publisher = {Springer},
title = {{Socioecological factors influencing intergroup encounters in western lowland gorillas (\textit{Gorilla gorilla gorilla})}},
volume = {41},
