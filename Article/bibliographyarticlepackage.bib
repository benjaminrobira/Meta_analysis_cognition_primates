title = {{Zebra diel migrations reduce encounter risk with lions at night}},
volume = {88},
year = {2019}
}
@article{kaufmann1983definitions,
abstract = {Dominance/subordinance is a relationship between 2 individuals in which one defers to the other in contest situations. Each such relationship represents an adaptive compromise for each individual in which the benefits and costs of giving in or not giving in are compared. In evolutionary terms, dominance essentially equals priority of access to resources in short supply. Both individuals save time, energy, and the risk of injury by recognizing and abiding by an established dominant-subordinate relationship. Dominance can be either absolute or predictably reversible in different locations or at different times. Rank hierarchies and territoriality represent the two extremes of absolute and relative dominance, respectively. A dominance hierarchy is the sum total of the adaptive compromises made between individuals in an aggregation or organized group. Territoriality is a form of space-related dominance. Its most important function is to provide the territory holder with an assured supply of critical resources. -from Author Dept Zoology, Univ of Florida, Gainsville, FL 32611, USA.},
