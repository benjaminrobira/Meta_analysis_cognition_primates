keywords = {Gorilla gorilla,Nutritional ecology,Sex differences},
number = {4},
pages = {727--738},
pmid = {19890869},
publisher = {Wiley Online Library},
title = {{Male and female western gorilla diet: Preferred foods, use of fallback resources, and implications for ape versus old world monkey foraging strategies}},
volume = {140},
year = {2009}
