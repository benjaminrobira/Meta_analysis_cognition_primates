journal = {PLoS ONE},
keywords = {Chimpanzees,Food,Fruits,Gorillas,Leaves,Primates,Seeds,Vocalization},
month = {feb},
number = {2},
pages = {e0144197},
pmid = {26909518},
publisher = {Public Library of Science},
title = {{Food-associated calling in gorillas (\textit{Gorilla g. gorilla}) in the wild}},
